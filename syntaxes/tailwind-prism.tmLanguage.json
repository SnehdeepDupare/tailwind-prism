{
  "name": "Tailwind Prism Injection",
  "scopeName": "tailwind.prism.injection",
  "injectionSelector": "L:string.quoted.double.tsx, L:string.quoted.double.jsx",
  "patterns": [
    {
      "include": "#tailwind-classes"
    }
  ],
  "repository": {
    "tailwind-classes": {
      "patterns": [
        {
          "comment": "Variants like hover:, dark:, sm:",
          "name": "tailwind.variant",
          "match": "(?<![\\w-])([a-z-]+:)"
        },
        {
          "comment": "Important modifier",
          "name": "tailwind.important",
          "match": "!"
        },
        {
          "comment": "Arbitrary values like [state=open]",
          "name": "tailwind.arbitrary",
          "match": "\\[[^\\]]+\\]"
        },
        {
          "comment": "Utilities",
          "name": "tailwind.utility",
          "match": "[a-zA-Z0-9\\-_/]+"
        }
      ]
    }
  }
}
